<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Set the navigation bar to 50% translucent white -->
        <item name="android:navigationBarColor">@color/light_black</item>
        <!-- Since the nav bar is white, we will use dark icons -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="colorPrimaryDark" tools:targetApi="23" tools:ignore="DuplicateDefinition">@color/light_black</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:scaleType">centerInside</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Set the navigation bar to 50% translucent white -->
        <item name="android:navigationBarColor">@color/fondoFooter</item>
    </style>

    <!--Button style-->
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorBlue</item>
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="shapeAppearance">@dimen/_5sdp</item>
        <item name="android:height">@dimen/_55sdp</item>
    </style>

    <style name="Button.Second" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorApp</item>
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="shapeAppearance">@dimen/_5sdp</item>
        <item name="android:height">@dimen/_55sdp</item>
    </style>

    <style name="Button.Third" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/negro_white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="shapeAppearance">@dimen/_5sdp</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
    </style>

    <style name="Button.Oval" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:textColor">@color/negro_white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_17sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="shapeAppearance">@dimen/_5sdp</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
    </style>

    <style name="Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorApp</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="shapeAppearance">@dimen/_5sdp</item>
        <item name="android:height">@dimen/_55sdp</item>
    </style>


</resources>
